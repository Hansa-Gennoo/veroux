<h1>Book: <%= @service.title %></h1>

<%= form_with model: [@service, @booking] do |f| %>
  <div>
    <%= f.label :client_name %><br>
    <%= f.text_field :client_name %>
  </div>

  <div>
    <%= f.label :client_email %><br>
    <%= f.email_field :client_email %>
  </div>

  <div>
    <%= f.label :starts_at, "Choose a time" %><br>
    <%= f.select :starts_at, @slots.map { |t| [t.strftime("%a %d %b, %H:%M"), t] } %>
  </div>


  <div>
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>

  <%= f.submit "Request booking" %>
<% end %>
