<h1>Edit profile</h1>

<%= form_with model: @user, url: dashboard_profile_path, method: :patch do |f| %>
  <div>
    <%= f.label :display_name %>
    <%= f.text_field :display_name %>
  </div>

  <div>
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>

  <div>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>

  <%= f.submit "Save" %>
<% end %>
