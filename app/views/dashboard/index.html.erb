<h1>Dashboard</h1>

<h2>Your services</h2>
<p><%= link_to "New service", new_service_path %></p>

<ul>
  <% @services.each do |s| %>
    <li>
      <%= link_to s.title, service_path(s) %>
      (<%= link_to "Edit", edit_service_path(s) %>)
    </li>
  <% end %>
</ul>

<h2>Bookings</h2>
<ul>
  <% @bookings.each do |b| %>
    <li>
      <strong><%= b.client_name %></strong> — <%= b.client_email %> —
      <%= b.starts_at %> — <%= b.status %>
      (Service: <%= b.service.title %>)
    </li>
  <% end %>
</ul>
