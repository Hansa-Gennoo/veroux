<h1>Dashboard</h1>

<h2>Your services</h2>
<p><%= link_to "New service", new_dashboard_service_path %></p>

<ul>
  <% @services.each do |s| %>
    <li>
      <%= link_to s.title, service_path(s) %>
      (<%= link_to "Edit", edit_service_path(s) %>)
    </li>
  <% end %>
</ul>

<h2>Bookings</h2>
<ul>
  <% @bookings.each do |b| %>
    <li>
      <strong><%= b.client_name %></strong> — <%= b.client_email %> —
      <%= b.starts_at %> — <%= b.status %>
      (Service: <%= b.service.title %>)

      <% if b.status == "pending" %>
        <%= button_to "Confirm", confirm_booking_path(b), method: :patch %>
        <%= button_to "Cancel", cancel_booking_path(b), method: :patch %>
      <% end %>
    </li>
  <% end %>
</ul>
